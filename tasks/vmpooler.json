{
  "puppet_task_version": 1,
  "supports_noop": false,
  "description": "Provision/Tear down a machine on vmpooler",
  "parameters": {
    "action": {
      "description": "Action to perform, tear_down (single), tear_down_nodes (all), or provision",
      "type": "Enum[provision, tear_down, tear_down_nodes]",
      "default": "provision"
    },
    "inventory": {
      "description": "Location of the inventory file",
      "type": "Optional[String[1]]"
    },
    "node_name": {
      "description": "The name of the node",
      "type": "Optional[String[1]]"
    },
    "platform": {
      "description": "Platform to provision, eg ubuntu-1604-x86_64",
      "type": "Optional[String[1]]"
    },
    "vars": {
      "description": "key/value pairs to add to the vars section",
      "type": "Optional[String[1]]"
    }

  },
  "files": [
    "provision/lib/task_helper.rb"
  ]
}
